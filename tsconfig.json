{
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@adapters": [
        "src/adapters/index"
      ],
      "@entities": [
        "src/entities/index"
      ],
      "@useCases": [
        "src/use-cases/index"
      ],
      "@useCases/common/*": [
        "src/use-cases/common/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@server": [
        "src/Server"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts", "src/infrastructure/db/relations.js", "src/infrastructure/db/models/store/customer.js", "src/infrastructure/db/models/store/order.js", "src/infrastructure/db/models/store/line-item.js", "src/infrastructure/db/models/store/product.js", "src/infrastructure/db/models.js"
  ],
  "exclude": [
    "src/infrastructure/db/migrations/**/*",
    "src/infrastructure/db/seeders/**/*"
  ]
}